<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.HarryPotter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E8C8C"
    tools:context=".Activities.HousesActivity">

    <!-- Primeira imagem -->
    <ImageView
        android:id="@+id/gryffindor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/ravenclaw"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/hufflepuff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gryffindor" />

    <!-- Segunda imagem -->
    <ImageView
        android:id="@+id/hufflepuff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/slytherin"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gryffindor"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hufflepuff" />

    <!-- Terceira imagem -->
    <ImageView
        android:id="@+id/ravenclaw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/slytherin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gryffindor"
        app:srcCompat="@drawable/ravenclaw" />

    <!-- Quarta imagem -->
    <ImageView
        android:id="@+id/slytherin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ravenclaw"
        app:layout_constraintTop_toBottomOf="@id/hufflepuff"
        app:srcCompat="@drawable/slytherin" />

</androidx.constraintlayout.widget.ConstraintLayout>
